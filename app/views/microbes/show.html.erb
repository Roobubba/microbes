<%= render 'shared/page_title', title: @microbe.name %>

<div class="container-fluid">

  <div class="row">

    <div class="col-xs-12 col-md-4 pull-right center">
      <p>pic here?</p>
    </div>
    <div class="col-md-8">

      <div class="col-xs-12 text-center nopad">
        <div class="col-xs-12 col-sm-4 col-sm-offset-2">
          <% if logged_in? and can_afford(@microbe) and !has_microbe(@microbe) %>
            <%= link_to "Buy this microbe for: " + @microbe.cost.to_s, buy_microbe_path, class: "btn btn-warning" %>
          <% end %>
          <% if logged_in? and current_user.admin? %>
            <%= link_to "XEdit this recipeX", edit_microbe_path, class: "btn btn-warning" %>
          <% end %>
        </div>
        <div class="col-xs-12 col-sm-4">
          <% if logged_in? and current_user.admin? %>
            <%= link_to "Delete this recipe", microbes_path, class: "btn btn-warning" %>
          <% end %>
        </div>
      </div>
    </div>
    
    <div class="col-md-8 col-xs-12">
      <p><h3><%= @microbe.name %></h3></p>

      <div class="well">


        <p>
          <strong>
            Steps:
          </strong>
        </p>
        <%= simple_format(@microbe.name) %>
        <p>
          <%= simple_format(@microbe.cost.to_s) %>
        </p>
      </div>
    </div>
  </div>
  
</div>

<%= render 'shared/return_buttons' %>