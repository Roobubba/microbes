<%= render 'shared/errors', obj: @user %> 
  
  <div class="row">
    <div class="well col-md-8 col-md-offset-2">
      <%= form_for @user do |f| %>
      <%= f.label :username %>
      <%= f.text_field :username %>

      <%= f.label :uniqueid %>
      <%= f.text_field :uniqueid %>

      <%= f.label :email %>
      <%= f.email_field :email %>
      
      <%= f.label :password %>
      <%= f.password_field :password %>
      
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation %>
      
      <% if current_user.admin? %>
        <%= f.label :microbes %>
        <%= f.text_field :microbes %>
      <% end %> 
      
      <%= f.submit(@user.new_record? ? 'Register' : 'Edit Profile', class: "btn btn-success") %>
      <% end %>
    </div>
  </div>
