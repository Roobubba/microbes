    <div class="row">
      <div class="col-md-2">
        <p>User Pic Here</p>
      </div>
      <div class="col-md-10 well">
        <h4><%= link_to user.username, user_path(user) %></h4>
        <p>UniqueID: <%= user.uniqueid %></p>

      </div>

    </div>
    <hr/>
  </div>
<% end %>

