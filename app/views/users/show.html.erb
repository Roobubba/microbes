<%= render 'shared/page_title', title: @user.username %>

<div class="container-fluid">

  <div class="row">

    <div class="col-xs-12 col-md-4 pull-right center">
      <p>pic here?</p>
    </div>
    <div class="col-md-8">

      <div class="col-xs-12 text-center nopad">
        <div class="col-xs-12 col-sm-4 col-sm-offset-2">
          <% if logged_in? %>
            <% if current_user == @user %>
              <%= link_to "Edit your profile", edit_user_path, class: "btn btn-warning" %>
            <% else if current_user.admin? %>
              <%= link_to "Edit profile: " + @user.username, edit_user_path, class: "btn btn-warning" %>
            <% end %>
            
          <% end %>
        </div>
        <div class="col-xs-12 col-sm-4">
          <% current_user.admin? %>
            <%= link_to "Delete this profile", users_path, class: "btn btn-warning" %>
          <% end %>
        </div>
      </div>
    </div>
    
    <div class="col-md-8 col-xs-12">
      <p><h3><%= @user.username %></h3></p>

      <div class="well">


        <p>
          <strong>
            UniqueID: <%= @user.uniqueid %>
          </strong>
        </p>
        Microbe int: <%= @user.microbes %>
      </div>
    </div>
  </div>
  
<%= will_paginate @microbes %>
<br>

<% @microbes.each do |microbe| %>
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-2">
        <p>Microbe Pic Here</p>
      </div>
      <div class="col-md-10 well">
        <h4><%= link_to microbe.name, microbe_path(microbe) %></h4>
        <p>Microbe: <%= microbe.name %></p>

      </div>

    </div>
    <hr/>
  </div>
<% end %>

<%= will_paginate @microbes %>
  
</div>

<%= render 'shared/return_buttons' %>